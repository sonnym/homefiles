startup_message off

# clear vi, less, &c. output on close
altscreen on

# suppress blank lines in history buffer
compacthist on

# store additional lines in window scrollback
scrollback 1000
defscrollback 1000

# store hardcopy and log files in same location
hardcopydir "$HOME/.screen"
logfile "$HOME/.screen/screenlog.%n"

termcapinfo * ti=:te=
