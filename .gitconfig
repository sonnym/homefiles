[core]
	excludesfile = ~/.gitignore.global

[user]
	name = sonnym
	email = michaud.sonny@gmail.com

[alias]
  sup = submodule foreach 'git fetch && git checkout origin/master && echo'

[fetch]
  prune = true
[pull]
	rebase = preserve
[push]
	default = upstream

[rebase]
	stat = true

[status]
	short = true
	branch = true

[log]
  decorate = true

[help]
	autocorrect = -1

[diff]
	mnemonicprefix = true
	algorithm = histogram
	tool = vimdiff

[difftool]
	prompt = false

[color]
	diff = auto

[color "branch"]
	upstream = red

[remote "origin"]
  tagopt = --tags
