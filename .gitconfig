[core]
	excludesfile = ~/.gitignore.global

[user]
	name = sonnym
	email = michaud.sonny@gmail.com

[fetch]
  prune = true
[pull]
	rebase = preserve
[push]
	default = upstream

[log]
  decorate = true

[diff]
	tool = vimdiff
[difftool]
	prompt = false
[color]
	diff = auto

[remote "origin"]
  tagopt = --tags
